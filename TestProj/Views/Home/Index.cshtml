@using WebGrease.Css.Extensions
@model System.Collections.Generic.IEnumerable<TestProj.BPMonlineService.Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    foreach (var contact in Model)
    {
        using (Html.BeginForm("EditView", "Home"))
        {
            @Html.HiddenFor(model => @contact.Id)
    <div class="panel panel-primary" style="margin-right: 5%;">
        <div class="panel-heading">
            <i class="zmdi zmdi-account-circle zmdi-hc-3x"></i><label class="panel-heading" style="font-size: 20px; color: white;">@contact.Name </label>
        </div>
        <div class="panel-body">

            <div class="input-field col-md-6">
                <i class="zmdi zmdi-phone prefix"></i>
                <input id="icon_telephone" type="tel" class="validate" value="@contact.MobilePhone" disabled="disabled">
                <label for="icon_telephone">Telephone</label>
            </div>
            <div class="input-field col-md-6">
                <i class="zmdi zmdi-face prefix"></i>
                <input id="zmdi-face" type="tel" class="validate" value="@contact.Dear" disabled="disabled">
                <label for="zmdi-face">Dear</label>
            </div>
            <div class="input-field col-md-6">
                <i class="zmdi zmdi-seat prefix"></i>
                <input id="zmdi-seat" type="tel" class="validate" value="@contact.JobTitle" disabled="disabled">
                <label for="zmdi-seat">JobTitle</label>
            </div>
            <div class="input-field col-md-6">
                <i class="zmdi zmdi-cake prefix"></i>
                <input id="zmdi-cake" type="tel" class="validate" value="@contact.BirthDate" disabled="disabled">
                <label for="zmdi-cake">BirthDate</label>
            </div>
            <p>
                <div class="input-field col-md-6" style=" text-align: center;">
                    <button class="btn btn-danger waves-effect waves-light" type="submit"
                            name="submitButton" value="Delete">
                        Delete <i class="zmdi zmdi-delete"></i>
                    </button>
                </div>
                <div class="input-field col-md-6" style=" text-align: center;">
                    <button class="btn btn-warning waves-effect waves-light" type="submit"
                            name="submitButton" value="Edit">
                        Edit <i class="zmdi zmdi-edit"></i>
                    </button>
                </div>
</p>

        </div>
    </div>

        }
    }

}

